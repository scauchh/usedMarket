<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.scau.mapper.UserMapper">
    <select id="updateUser" resultType="org.scau.pojo.User">
        update user
        <set>
            nick_name = #{nickName},
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="phone != null">
                phone = #{phone}
            </if>
        </set>
        where
            user_id = #{userID}
    </select>
    <select id="getAllUserInfo" resultType="org.scau.pojo.User">
        select * from user
        <where>
                user_id != #{userID}
            <if test="userName != null and userName != ''">
                and user_name like concat('%', #{userName}, '%')
            </if>
            <if test="userRole == '普通用户'">
                and role_id = 0
            </if>
            <if test="userRole == '管理员'">
                and role_id = 1
            </if>
        </where>
        limit #{offset}, #{pageSize}
    </select>
</mapper>